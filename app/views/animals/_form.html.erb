<%= form_with model: @animal, class: "animal-form" do |f| %>
  <h3>Please enter information to <%= message %> animal </h3>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :species %>
  <%= f.text_field :species %>

  <%= f.label :age %>
  <%= f.number_field(:age, min: 0, step: 1) %>

  <%= f.submit "#{action_name} Animal", class: "submit-button" %>
<% end %>
